{
    "id": "https://style.tools/json-schemas/css-loader.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for üìê Style.Tools CSS Loader Configuration.",
    "type": "object",
    "properties": {
        "load": {
            "$ref": "#/definitions/load"
        },
        "load_options": {
            "$ref": "#/definitions/load_options"
        },
        "capture": {
            "$ref": "capture.json#/definitions/capture"
        },
        "capture_options": {
            "$ref": "capture.json#/definitions/capture_options"
        }
    },
    "additionalProperties": false,

    "definitions": {
        "load": {
            "description": "CSS Loader configuration.",
            "oneOf": [{
                "description": "A stylesheet URL.",
                "type": "string",
                "minLength": 1
            }, {
                "type": "array",
                "minItems": 1,
                "items": {
                    "oneOf": [{
                        "description": "A stylesheet URL.",
                        "type": "string",
                        "minLength": 1
                    }, {
                        "type": "object",
                        "properties": {
                            "ref": {
                                "description": "A reference name for the stylesheet. Can be used for dependency matching and is added as DOM-element reference.",
                                "type": "string"
                            },
                            "href": {
                                "description": "A stylesheet URL.",
                                "type": "string",
                                "minLength": 1
                            },
                            "media": {
                                "description": "A media query to apply to the stylesheets.",
                                "type": "string",
                                "default": "all"
                            },
                            "attributes": {
                                "description": "HTML element attributes to add to the stylesheet element.",
                                "type": "object",
                                "additionalProperties": {
                                    "type": "string"
                                }
                            },
                            "target": {
                                "description": "CSS selector for a target DOM element to insert stylesheets.",
                                "$ref": "#/definitions/target"
                            },
                            "load_timing": {
                                "description": "Download timing configuration.",
                                "$ref": "timing.json#/definitions/timing_config"
                            },
                            "render_timing": {
                                "description": "Render timing configuration.",
                                "$ref": "timing.json#/definitions/timing_config"
                            },
                            "cache": {
                                "description": "Cache configuration.",
                                "$ref": "cache.json#/definitions/cache_config"
                            },
                            "dependencies": {
                                "$ref": "dependency.json#/definitions/dependencies"
                            }
                        },
                        "required": ["href"],
                        "additionalProperties": false
                    }]
                },
                "uniqueItems": true
            }]
        },
        "load_options": {
            "description": "CSS Loader global options configuration.",
            "type": "object",
            "properties": {
                "media": {
                    "description": "A media query to apply to the stylesheets.",
                    "type": "string",
                    "default": "all"
                },
                "attributes": {
                    "description": "HTML element attributes to add to the stylesheet element.",
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "target": {
                    "description": "CSS selector for a target DOM element to insert stylesheets.",
                    "$ref": "#/definitions/target"
                },
                "load_timing": {
                    "description": "Download timing configuration.",
                    "$ref": "timing.json#/definitions/timing_config"
                },
                "render_timing": {
                    "description": "Render timing configuration.",
                    "$ref": "timing.json#/definitions/timing_config"
                },
                "cache": {
                    "description": "Cache configuration.",
                    "$ref": "cache.json#/definitions/cache_config"
                }
            },
            "additionalProperties": false
        },
        "target": {
            "description": "CSS selector for a target DOM element to insert stylesheets.",
            "oneOf": [{
                "type": "boolean",
                "enum": [false]
            }, {
                "type": "string",
                "minLength": 1
            }, {
                "description": "Insert before target DOM element.",
                "type": "object",
                "properties": {
                    "before": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "required": ["before"],
                "additionalProperties": false
            }, {
                "description": "Insert after target DOM element.",
                "type": "object",
                "properties": {
                    "after": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "required": ["after"],
                "additionalProperties": false
            }]
        }
    }
}